<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/facepost"
            android:contentDescription="description" />
        
    </RelativeLayout>

     <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.80">
            
            <EditText
                android:id="@+id/fullNameRegText"
                android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="Full Name"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
            />
      
            <EditText
                android:id="@+id/emailRegText"
                android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
            />
        
            <EditText
                android:id="@+id/passwordRegText"
                android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
            />

            <EditText
                android:id="@+id/confirmPasswordRegText"
                android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
            />
      
         <Button
        android:id="@+id/registerButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_height="45dp"
        android:text="Register"
        android:background="@drawable/roundbutton"
        android:textAllCaps="false"
        android:layout_width="300dp"/>

        <TextView
            android:id="@+id/clickToLogin"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Click here to Login"
       />
       
   </LinearLayout>
    

</LinearLayout>
